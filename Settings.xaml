<Window x:Class="interface_projet.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interface_projet"
        mc:Ignorable="d"
        Title="{DynamicResource Settings}" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="{DynamicResource Settings}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

        <!-- Langue -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="{DynamicResource Language}" VerticalAlignment="Center"/>
            <RadioButton x:Name="rbFrench" Content="Français" GroupName="Langue" Tag="fr" Margin="5,0" Checked="LanguageRadioButton_Checked"/>
            <RadioButton x:Name="rbEnglish" Content="English" GroupName="Langue" Tag="en" Checked="LanguageRadioButton_Checked"/>
        </StackPanel>

        <!-- Type de log -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="{DynamicResource TypeLog}" VerticalAlignment="Center"/>
            <RadioButton x:Name="rbXML" Content="XML" GroupName="LogType" IsChecked="True" Margin="5,0"/>
            <RadioButton x:Name="rbJSON" Content="JSON" GroupName="LogType"/>
        </StackPanel>

        <!-- Ajout d'extensions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="{DynamicResource ExtensionCrypter}" VerticalAlignment="Center"/>
            <TextBox x:Name="tbExtension" Width="100" />
            <Button Content="{DynamicResource AddExtension}" Width="80" Margin="5,0" />
        </StackPanel>

        <!-- Liste et suppression des extensions, bouton Voir logs -->
        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <ListBox x:Name="lbExtensions" Height="100"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                <Button Content="{DynamicResource DeleteExtension}" Width="80" Margin="0,0,5,0" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
        <!-- Chemin des logs et bouton Voir logs -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
            <TextBlock Text="Chemin des logs: " VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="tbLogsPath" Width="300" Text="C:\Logs" Margin="0,0,5,0"/>
            <Button x:Name="lblSource" Content="📂" Width="30" Click="BtnSource_Click"
        Background="#0078D7" Foreground="White"
        BorderThickness="0" Cursor="Hand"/>
            <Button Content="Voir logs" Width="80" Click="btnVoirLogs_Click"/>
        </StackPanel>
    </Grid>
</Window>
