<Window x:Class="interface_projet.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interface_projet"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

        <!-- Langue -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Langue: " VerticalAlignment="Center"/>
            <RadioButton x:Name="rbFrench" Content="Français" GroupName="Langue" Tag="fr" IsChecked="True" Margin="5,0" Checked="LanguageRadioButton_Checked"/>
            <RadioButton x:Name="rbEnglish" Content="English" GroupName="Langue" Tag="en" Checked="LanguageRadioButton_Checked"/>
        </StackPanel>

        <!-- Type de log -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Type de log: " VerticalAlignment="Center"/>
            <RadioButton x:Name="rbXML" Content="XML" GroupName="LogType" IsChecked="True" Margin="5,0"/>
            <RadioButton x:Name="rbJSON" Content="JSON" GroupName="LogType"/>
        </StackPanel>

        <!-- Ajout d'extensions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Extension à crypter: " VerticalAlignment="Center"/>
            <TextBox x:Name="tbExtension" Width="100" />
            <Button Content="Ajouter" Width="80" Margin="5,0" />
        </StackPanel>

        <!-- Liste et suppression des extensions, bouton Voir logs -->
        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <ListBox x:Name="lbExtensions" Height="100"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                <Button Content="Supprimer" Width="80" Margin="0,0,5,0" Click="Button_Click"/>
                <Button Content="Voir logs" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
